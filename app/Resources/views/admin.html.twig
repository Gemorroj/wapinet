{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        div[data-role="popup"] {
            display: none;
        }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            // скрываем левую панель, затем удаляем кнопку открытия
            $("[data-toggle='offcanvas']").click().remove();
        });
    </script>
{% endblock %}

{% block sonata_left_side %}{% endblock sonata_left_side %}
