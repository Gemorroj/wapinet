{% set title %}{% block title %}{% endblock %}{% endset %}
<!DOCTYPE html>
<html>
<head>
    <title>{{ wapinet_title }} - {{ title }}</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {# bbcode #}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/wapinet/xbbcode/resources/style.css') }}" />

    {# jquery #}
    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.1.min.js"></script>

    {# jquery mobile #}
    <link rel="stylesheet" type="text/css" href="//code.jquery.com/mobile/1.4.4/jquery.mobile-1.4.4.min.css" />
    <script type="text/javascript" src="//code.jquery.com/mobile/1.4.4/jquery.mobile-1.4.4.min.js"></script>

    {# FileSaver #}
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.0.0/FileSaver.min.js"></script>
    {# jqm.autoComplete #}
    <script type="text/javascript" src="//cdn.rawgit.com/commadelimited/autoComplete.js/master/jqm.autoComplete-1.5.2-min.js"></script>


    {# jplayer #}
    {% if file is defined and (file.isPlayableVideo or file.isPlayableAudio) %}
        <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/jplayer/2.7.1/skin/blue.monday/jplayer.blue.monday.css" />
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jplayer/2.7.1/jquery.jplayer/jquery.jplayer.min.js"></script>
        <script type="text/javascript">{% autoescape 'js' %}
            var Jplayer = {
                'swfPath': "//cdnjs.cloudflare.com/ajax/libs/jplayer/2.7.1/jquery.jplayer/Jplayer.swf"
            };
        {% endautoescape %}</script>
    {% endif %}

