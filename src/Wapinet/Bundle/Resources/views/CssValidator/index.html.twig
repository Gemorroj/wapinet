{% extends "::base.html.twig" %}

{% block title %}CSS валидатор{% endblock %}
{% block menu %}
    {{wapinet_menu({
    1: {'uri': path('programming'), 'title': 'WEB мастерская'}
    })}}
{% endblock %}


{% block content %}
    {{ form_start(form, {'action': path('css_validator_index'), 'method': 'POST'}) }}

    {% if result is not null %}
        {% if result.validity %}
            <strong>Документ прошел валидацию</strong><br />
        {% endif %}

        {% if result.errors %}
            <strong>Ошибки</strong>
            <ul>
            {% for error in result.errors %}
                <li>Строка {{ error.line }}: [{{ error.errortype }}] - {{ error.message }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        {% if result.warnings %}
            <strong>Предупреждения</strong>
            <ul>
            {% for warning in result.warnings %}
                <li>Строка {{ warning.line }}: {{ warning.message }}</li>
            {% endfor %}
            </ul>
        {% endif %}
    {% endif %}

    {{ form_errors(form) }}

    {{ form_row(form.css) }}
    {{ form_row(form.file) }}
    <div class="ui-grid-b">
        <div class="ui-block-a">{{ form_row(form.profile) }}</div>
        <div class="ui-block-b">{{ form_row(form.usermedium) }}</div>
        <div class="ui-block-c">{{ form_row(form.warning) }}</div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
