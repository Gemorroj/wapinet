{% extends "::base.html.twig" %}

{% block title %}Отправка Email{% endblock %}
{% block breadcrumbs %}
    {{wapinet_breadcrumbs({
    1: {'uri': path('utilities'), 'title': 'Полезные WEB приложения'}
    })}}
{% endblock %}

{% block content %}
    {% if result is not null %}
        <strong>
            {% if result %}
                E-mail успешно отправлен
            {% else %}
                Произошла ошибка при отправке E-mail
            {% endif %}
        </strong>
    {% endif %}

    {% form_theme form 'WapinetBundle::captcha.html.twig' %}
    {{ form_start(form, {'action': path('email_index'), 'method': 'POST'}) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
