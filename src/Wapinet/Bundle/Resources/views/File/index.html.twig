{% extends '::base.html.twig' %}

{% block title %}Файлообменник{% endblock %}
{% block breadcrumbs %}
    {{wapinet_breadcrumbs({
    1: {'uri': path('downloads'), 'title': 'Загрузки, развлечения'}
    })}}
{% endblock %}

{% block content %}
    <div data-role="collapsible" data-collapsed="false" data-theme="b" data-content-theme="c">
        <h2>Новые файлы</h2>
        <ul data-role="listview">
            <li><a href="#">За вчера</a> <span class="ui-li-count">{{ file_count_yesterday() }}</span></li>
            <li><a href="#">За сегодня</a> <span class="ui-li-count">{{ file_count_today() }}</span></li>
        </ul>
    </div>

    <ul data-role="listview" data-inset="true">
        <li><a href="#">Все файлы</a> <span class="ui-li-count">{{ file_count_all() }}</span></li>
        <li><a href="#">Категории</a></li>
        <li data-icon="search"><a href="#">Поиск</a></li>
    </ul>

    <ul data-role="listview" data-inset="true">
        <li data-icon="forward"><a href="{{ path('file_upload') }}">Загрузить файл</a></li>
        <li data-icon="info"><a href="{{ path('file_statistics') }}">Статистика</a></li>
        <li data-icon="alert"><a href="{{ path('file_information') }}">Информация</a></li>
    </ul>
{% endblock %}
