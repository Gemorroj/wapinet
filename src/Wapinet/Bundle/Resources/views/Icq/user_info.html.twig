{% extends "::base.html.twig" %}

{% block title %}Данные о владельце UIN{% endblock %}

{% block content %}
    <div>Смотреть данные пользователя ICQ<br/>
        <form action="{{ path('icq_user_info') }}" method="post" id="form">
            <div>
                UIN: <input name="uin" type="text" value="{{ app.request.get('uin') }}" /><br/>
                <input type="submit" value="Смотреть"/>
            </div>
        </form>
        {% if result is not null %}
            {% if result.found %}
                <div>
                    <img src="https://api.icq.net/expressions/get?t={{ result.uin }}&amp;f=native&amp;type=buddyIcon" alt="avatar" />
                    <img src="http://status.icq.com/online.gif?img=5&amp;icq={{ result.uin }}" alt="status" />
                    {{ result.content|raw }}
                </div>
            {% else %}
                <div>Пользователь не найден<br/></div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
