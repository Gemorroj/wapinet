{% set path = user.avatar ? vich_uploader_asset(user, 'avatar') : wapinet_nophoto %}

<a href="#avatar-{{ user.id }}" data-rel="popup" data-position-to="window" data-transition="fade">
    <img src="{{ path|imagine_filter('thumbnail') }}" alt="{{ user.username }}" class="image-preview" />
    {% if text_after_avatar is defined %}
        <h2>{{ text_after_avatar }}</h2>
    {% endif %}
</a>
<div class="avatar-popup" data-role="popup" id="avatar-{{ user.id }}" data-overlay-theme="a" data-theme="d" data-corners="false">
    <a href="#" data-rel="back" data-role="button" data-theme="a" data-icon="delete" data-iconpos="notext" class="ui-btn-right">Закрыть</a>
    <img data-src="{{ path }}" src="{{ path|imagine_filter('thumbnail') }}" alt="{{ user.username }}" />
</div>
