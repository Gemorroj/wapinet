{% if file.is3gp %}
    {% set videoMp4 = vich_uploader_asset(file, 'file')|wapinet_video_3gp_to_mp4 %}
    {% if videoMp4 is not null %}
        <a data-inline="true" data-role="button" href="{{ videoMp4 }}" download="{{ file.originalFileName }}.mp4">Скачать MP4</a>
    {% endif %}
{% elseif file.isAvi %}
    {% set videoWebm = vich_uploader_asset(file, 'file')|wapinet_video_avi_to_webm %}
    {% if videoWebm is not null %}
        <a data-inline="true" data-role="button" href="{{ videoWebm }}" download="{{ file.originalFileName }}.webm">Скачать Webm</a>
    {% endif %}
{% elseif file.isWmv %}
    {% set videoMp4 = vich_uploader_asset(file, 'file')|wapinet_video_wmv_to_mp4 %}
    {% if videoMp4 is not null %}
        <a data-inline="true" data-role="button" href="{{ videoMp4 }}" download="{{ file.originalFileName }}.mp4">Скачать MP4</a>
    {% endif %}
{% endif %}

<div id="jp_container_1" class="jp-video">
    <div class="jp-type-single">
        <div id="jquery_jplayer_1" class="jp-jplayer"></div>
        <div class="jp-gui">
            <div class="jp-video-play">
                <a href="javascript:;" class="jp-video-play-icon" tabindex="1">воспроизвести</a>
            </div>
            <div class="jp-interface">
                <div class="jp-progress">
                    <div class="jp-seek-bar">
                        <div class="jp-play-bar"></div>
                    </div>
                </div>
                <div class="jp-current-time"></div>
                <div class="jp-duration"></div>
                <div class="jp-controls-holder">
                    <ul class="jp-controls">
                        <li><a href="javascript:;" class="jp-play" tabindex="1">воспроизвести</a></li>
                        <li><a href="javascript:;" class="jp-pause" tabindex="1">пауза</a></li>
                        <li><a href="javascript:;" class="jp-stop" tabindex="1">стоп</a></li>
                        <li><a href="javascript:;" class="jp-mute" tabindex="1" title="выключить звук">выключить звук</a></li>
                        <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="включить звук">включить звук</a></li>
                        <li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="максимальная громкость">максимальная громкость</a></li>
                    </ul>
                    <div class="jp-volume-bar">
                        <div class="jp-volume-bar-value"></div>
                    </div>
                    <ul class="jp-toggles">
                        <li><a href="javascript:;" class="jp-full-screen" tabindex="1" title="полный экран">полный экран</a></li>
                        <li><a href="javascript:;" class="jp-restore-screen" tabindex="1" title="обычный экран">обычный экран</a></li>
                        <li><a href="javascript:;" class="jp-repeat" tabindex="1" title="повторять">повторять</a></li>
                        <li><a href="javascript:;" class="jp-repeat-off" tabindex="1" title="не повторять">не повторять</a></li>
                    </ul>
                </div>
                {#<div class="jp-title">
                    <ul>
                        <li>{{ file.originalFileNameWithoutExtension }}</li>
                    </ul>
                </div>#}
            </div>
        </div>
        <div class="jp-no-solution">
            <span>Update Required</span>
            To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
        </div>
    </div>
</div>
