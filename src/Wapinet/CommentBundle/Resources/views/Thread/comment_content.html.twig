{% if comment is not fos_comment_in_state(constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) or fos_comment_can_delete_comment(comment) %}
<ul data-role="listview" data-inset="true">
{% block fos_comment_comment %}


    {% block fos_comment_comment_metas %}
        <li class="fos_comment_comment_metas" data-role="list-divider">
            {% block fos_comment_comment_metas_authorline %}
                <span class="fos_comment_comment_authorname">
                    {% if comment is fos_comment_in_state(constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) %}
                        {% trans from 'FOSCommentBundle' %}fos_comment_comment_deleted{% endtrans %}
                    {% else %}
                        {% if comment.author %}
                            <a href="{{ path('wapinet_user_profile', {'username': comment.authorName}) }}">{{ comment.authorName }}</a>
                        {% else %}
                            {{ comment.authorName }}
                        {% endif %}
                    {% endif %}
                </span>
                <span class="ui-li-count">{{ comment.createdAt|wapinet_datetime }}</span>
            {% endblock fos_comment_comment_metas_authorline %}

            {% block fos_comment_comment_metas_voting %}
                {% if fos_comment_can_vote(comment) %}
                    <span class="fos_comment_comment_voting">
                        <a data-role="button" data-inline="true" href="#" data-url="{{ url("fos_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": 1}) }}" class="fos_comment_comment_vote" data-iconpos="notext" data-theme="b" data-icon="plus">Голосовать за</a>
                        <a data-role="button" data-inline="true" href="#" data-url="{{ url("fos_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": -1}) }}" class="fos_comment_comment_vote" data-iconpos="notext" data-theme="b" data-icon="minus">Голосовать против</a>
                        <span class="fos_comment_comment_score" id="fos_comment_score_{{ comment.id }}">Голоса: {{ comment.score }}</span>
                    </span>
                {% endif %}
            {% endblock fos_comment_comment_metas_voting %}

            {% block fos_comment_comment_metas_edit %}
                {% if fos_comment_can_edit_comment(comment) %}
                    <a href="#" data-role="button" data-icon="edit" data-mini="true" data-inline="true" data-container="#fos_comment_comment_body_{{ comment.id }}" data-url="{{ url("fos_comment_edit_thread_comment", {"id": comment.thread.id, "commentId": comment.id}) }}" class="fos_comment_comment_edit_show_form">Изменить комментарий</a>
                {% endif %}
            {% endblock fos_comment_comment_metas_edit %}

            {% block fos_comment_comment_metas_delete %}
                {% if fos_comment_can_delete_comment(comment) %}
                    {% if comment is fos_comment_in_state(constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) %}
                        {# undelete #}
                        <a href="#" data-role="button" data-icon="back" data-mini="true" data-inline="true" data-url="{{ url("fos_comment_remove_thread_comment", {"id": comment.thread.id, "commentId": comment.id, "value": constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_VISIBLE') }) }}" class="fos_comment_comment_remove">Восстановить комментарий</a>
                    {% else %}
                        {# delete #}
                        <a href="#" data-role="button" data-icon="delete" data-mini="true" data-inline="true" data-url="{{ url("fos_comment_remove_thread_comment", {"id": comment.thread.id, "commentId": comment.id, "value":  constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')}) }}" class="fos_comment_comment_remove">Удалить комментарий</a>
                    {% endif %}
                {% endif %}
            {% endblock fos_comment_comment_metas_delete %}
        </li>
    {% endblock fos_comment_comment_metas %}

    <li data-icon="false" id="fos_comment_{{ comment.id }}" class="fos_comment_comment_show fos_comment_comment_depth_{{ depth }}" {% if parent is defined and parent is not null %}data-parent="{{ parent.id }}"{% endif %}>

        <div id="fos_comment_comment_body_{{ comment.id }}" class="fos_comment_comment_body">
        {% block fos_comment_comment_body %}
            {% if comment is fos_comment_in_state(constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) %}
                {% trans from 'FOSCommentBundle' %}fos_comment_comment_deleted{% endtrans %}
            {% else %}
                {% if comment.author and comment.author.avatar %}
                    <span class="fos_comment_comment_avatar">{% include 'WapinetBundle::avatar.html.twig' with {'user': comment.author} %}</span>
                {% endif %}
                <h2 class="fos_comment_comment_text">
                    {% if comment is fos_comment_raw %}
                        {{ comment.rawBody | raw }}
                    {% else %}
                        {{ comment.body | nl2br }}
                    {% endif %}
                </h2>
            {% endif %}
        {% endblock fos_comment_comment_body %}
        </div>


        {% block fos_comment_comment_children %}
            <div class="ui-li-desc">
            {% if view is not sameas('flat') %}
                {% if fos_comment_can_comment(comment) %}
                    <div class="fos_comment_comment_reply">
                        {% block fos_comment_comment_reply %}
                            <a href="#" data-role="button" data-url="{{ url('fos_comment_new_thread_comments', {"id": comment.thread.id}) }}" data-name="{{ comment.authorName }}" data-parent-id="{{ comment.id }}" class="fos_comment_comment_reply_show_form">Ответить</a>
                        {% endblock fos_comment_comment_reply %}
                    </div>
                {% endif %}

                <div class="fos_comment_comment_replies">
                    {% if children is defined %}
                        {% include "FOSCommentBundle:Thread:comments.html.twig" with { "comments": children, "depth": depth + 1, "parent": comment, "view": view } %}
                    {% endif %}
                </div>
            {% elseif view is sameas('flat') and children is defined %}
                {% include "FOSCommentBundle:Thread:comments.html.twig" with { "comments": children, "depth": depth + 1, "parent": comment, "view": view } %}
            {% endif %}
            </div>
        {% endblock fos_comment_comment_children %}
    </li>
{% endblock fos_comment_comment %}
</ul>
{% endif %}