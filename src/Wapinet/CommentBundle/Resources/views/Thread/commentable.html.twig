<div class="fos_comment_commentable_form_holder">
    {{ form_start(form, {'action': path('fos_comment_patch_thread_commentable', {'id': id}), 'method': 'POST', attr: {'data-fos-comment-thread-id': id, 'class': 'fos_comment_commentable_form'}}) }}

        {% block fos_comment_form_fields %}
            {{ form_errors(form) }}

            {{ form_errors(form.isCommentable) }}
            {{ form_widget(form.isCommentable) }}

            {{ form_rest(form) }}
        {% endblock %}

        <input type="hidden" name="_method" value="patch" />

        <div class="fos_comment_submit">
            {% block fos_comment_form_submit %}
                <input type="submit" data-inline="true" data-mini="true" value="{{ (isCommentable ? 'fos_comment_thread_open' : 'fos_comment_thread_close') | trans({}, 'FOSCommentBundle') }}" />
            {% endblock %}
        </div>

    {{ form_end(form) }}
</div>
