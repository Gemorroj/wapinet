<div class="fos_comment_vote_form_holder">
    {{ form_start(form, {'action': path('fos_comment_post_thread_comment_votes', {'id': id, 'commentId': commentId}), 'method': 'POST', attr: {'class': 'fos_comment_vote_form', 'data-score-holder': 'fos_comment_score_' ~ commentId}}) }}

        {% block fos_comment_form_fields %}
            {{ form_errors(form) }}
            {{ form_errors(form.value) }}
            {{ form_widget(form.value) }}

            {{ form_rest(form) }}
        {% endblock %}

        <div class="fos_comment_submit">
            {% block fos_comment_form_submit %}
                <input type="submit" />
            {% endblock %}
        </div>

    {{ form_end(form) }}
</div>
