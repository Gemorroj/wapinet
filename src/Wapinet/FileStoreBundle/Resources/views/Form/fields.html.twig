{% block iphp_file_widget %}
<div {{ block('widget_container_attributes') }}>
    <div>{{ form_widget(form.file) }}</div>
    {% if value and value.originalName is defined %}
        <fieldset>
            {% include 'WapinetBundle::avatar.html.twig' with {'user': app.user} %}
            {# {{ value.originalName }} #} ({{ value.size / 1000}} Kb{{ value.width is defined ? ', ' ~ value.width ~ 'x' ~ value.height : ""}})<br />

            <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
                <label>{{ form_row (form.delete)}}</label>
            </fieldset>

        </fieldset>
    {% endif %}
</div>
{% endblock iphp_file_widget %}


{% block iphp_file_admin_widget %}
    <div {{ block('widget_container_attributes') }}>
        <div>{{ form_widget(form.file) }}</div>
        {% if value and value.originalName is defined %}
            <fieldset>
                <img src="{{ value.path }}" alt="{{ value.originalName }}" />
                ({{ value.size / 1000}} Kb{{ value.width is defined ? ', ' ~ value.width ~ 'x' ~ value.height : ""}})<br />
                {{ form_row (form.delete)}}
            </fieldset>
        {% endif %}
    </div>
{% endblock iphp_file_admin_widget %}
