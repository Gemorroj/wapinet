{% extends 'WapinetMessageBundle::layout.html.twig' %}

{% block title %}{{ thread.subject }}{% endblock %}
{% block menu %}
    {{ wapinet_menu({
        1: {'uri': path('wapinet_message_inbox'), 'title': 'Входящие'}
    }) }}
{% endblock %}

{% block fos_message_content %}

<ul data-role="listview" data-inset="true">
{% for message in messages %}
    <li data-role="list-divider"><a href="{{ path('wapinet_user_profile', {'username': message.sender.username}) }}">{{ message.sender.username }}</a> <span class="ui-li-count">{{ message.createdAt|wapinet_datetime  }}</span></li>
    <li data-icon="false">
        {% if message.sender.avatar %}
            {% include 'WapinetBundle::avatar.html.twig' with {'user': message.sender, 'text_after_avatar': message.body } %}
        {% endif %}
    </li>
{% endfor %}
</ul>

    <div class="pagerfanta">
        {{ pagerfanta(messages) }}
    </div>

<h3>Ответить</h3>

{{ form_start(form, {'action': path('fos_message_thread_view', {'threadId': thread.id}), 'method': 'POST'}) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="Отправить" />
    </div>
{{ form_end(form) }}

{% endblock %}
