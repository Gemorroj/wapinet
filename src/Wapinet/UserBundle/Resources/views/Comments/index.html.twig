{% extends 'base.html.twig' %}

{% block title %}Комментарии {{ user.username }}{% endblock %}
{% block breadcrumbs %}
    {{ wapinet_breadcrumbs({
    1: {'uri': path('wapinet_users'), 'title': 'Пользователи'},
    1: {'uri': path('wapinet_user_profile', {'username': user.username}), 'title': 'Профиль ' ~ user.username}
    }) }}
{% endblock %}

{% block content %}

    <ul data-role="listview" data-inset="true">
        {% for comment in pagerfanta %}
            <li data-role="list-divider">
                <span>
                    <a class="bar-button ui-btn-icon-right ui-icon-comment ui-mini ui-btn-inline ui-btn" href="{{ comment.thread.permalink }}">&#10150;</a>
                    <a href="#" class="no-link bar-button ui-btn-icon-left ui-icon-heart ui-mini ui-btn-inline ui-btn">{{ comment.score }}</a>
                </span>
                <span class="ui-li-count">{{ comment.createdAt|wapinet_datetime  }}</span>
            </li>
            <li>
                <div>
                    {{ comment.body|wapinet_bbcode_parse }}
                </div>
            </li>
        {% else %}
            <li>Комментариев нет</li>
        {% endfor %}
    </ul>

    <div class="pagerfanta">
        {{ pagerfanta(pagerfanta) }}
    </div>

{% endblock %}
