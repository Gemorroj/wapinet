<li data-role="list-divider">
    {{ event.subject }}
    <span class="ui-li-count">{{ event.createdAt|wapinet_datetime  }}</span>
</li>
<li>
    <a href="{{ path('wapinet_user_friends', {'username': event.variables.friend.username}) }}">
        {% if event.variables.friend.isFemale %}
            Ваша подруга {{ event.variables.friend }} удалила из друзей {{ event.variables.friend_friend }}.
        {% else %}
            Ваш друг {{ event.variables.friend }} удалил из друзей {{ event.variables.friend_friend }}.
        {% endif %}
    </a>
</li>
