{% extends "base.html.twig" %}

{% block title %}{{ name }}{% endblock %}
{% block breadcrumbs %}
    {{wapinet_breadcrumbs({
    1: {'uri': path('downloads'), 'title': 'Развлечения'},
    2: {'uri': path('rates_index'), 'title': 'Курсы валют'}
    })}}
{% endblock %}

{% block content %}
    <p>{{ date|wapinet_date }}</p>
<table data-role="table" id="table-column-toggle" class="ui-responsive table-stroke table-stripe">
    <thead>
    <tr>
        <th>Название</th>
        <th>Код</th>
        <th>Курс</th>
    </tr>
    </thead>
    <tbody>
    {% for rate in rates %}
        <tr>
            <td>{{ rate.name }}</td>
            <td>{{ rate.code }}</td>
            <td>{{ rate.rate }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
